/*
 * -------------------------------------------------
 *  Nextflow config file for MENDEL
 * -------------------------------------------------
 * Imported under the default 'standard' Nextflow
 * profile in nextflow.config
 */

singularity {
  enabled = true
}

process {
  beforeScript = 'module load Singularity'
  executor = 'pbs'
  clusterOptions = { "-P $params.project" }
}

params {
  max_time = 192.h
  igenomes_base = '/lustre/scratch/projects/becker_common/references/'
}

genomes {
    'TAIR9' {
      bismark = "${params.igenomes_base}/Arabidopsis_thaliana/Ensembl/TAIR9/Sequence/BismarkIndex"
      fasta   = "${params.igenomes_base}/Arabidopsis_thaliana/Ensembl/TAIR9/Sequence/WholeGenomeFasta"
    }
}
